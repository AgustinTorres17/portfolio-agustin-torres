      </li>
    </ul>
    <button class="menu-close" aria-label="Close menu">&times;</button>
  </nav>
</header>

<style>
  header {
    padding: 1em;
    min-height: 6dvh;
    background-color: rgba(4, 4, 4, 0);
    backdrop-filter: blur(5px);
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.5s ease;
  }
  nav {
    width: 100%;
  }
  nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  a {
    color: inherit;
    text-decoration: none;
    position: relative;
  }

  a::after {
    content: "";
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 2px;
    bottom: -2px;
    left: 0;
    background-color: white; /* O el color que prefieras */
    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .menu-toggle,
  .menu-close {
    display: none;
    font-size: 2rem;
    background: none;
    border: none;
    color: white;
  }

  @media screen and (max-width: 660px) {
    header {
      backdrop-filter: unset;
    }

    .menu-toggle {
      display: block;
    }

    .nav-links {
      position: fixed;
      left: -100%;
      top: 0;
      height: 100%;
      width: 100%;
      background-color: rgba(4, 4, 4, 0.95); /* Fondo semitransparente */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      transition: left 0.3s ease;
    }

    .nav-links.active {
      left: 0;
    }

    .menu-close {
      display: block;
      position: fixed;
      top: 1rem;
      right: 1rem;
    }

    nav ul {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>

<script>
  window.addEventListener("scroll", function () {
    const header = document.querySelector("header");
    const scrollPosition = window.scrollY;

    if (scrollPosition > 50) {
      // Ajusta este valor seg√∫n tus necesidades
      header.style.backgroundColor = "rgba(4, 4, 4, 0.79)";
    } else {
      header.style.backgroundColor = "rgba(4, 4, 4, 0)";
    }
  });
</script>
